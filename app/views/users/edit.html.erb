<%content_for :head do%>
	<%= stylesheet_link_tag "first_step" %>
	<%= javascript_include_tag "functions" %>
	
	<script>
		$(document).ready(function(){
			//VALIDACAO
			$("#user_rg").mask("99.999.999-*",{placeholder:"_"});
			$("#user_cpf").mask("999.999.999-99",{placeholder:"_"});
			$("#user_phone").mask("(99) 9999-9999",{placeholder:"_"});
			$("#user_phone1").mask("(99) 9999-9999",{placeholder:"_"});
			$("#user_phone2").mask("(99) 9999-9999",{placeholder:"_"});
			$("#user_phone3").mask("(99) 9999-9999",{placeholder:"_"});
			$("#user_ae_cep").mask("99999-999",{placeholder:"_"});
		});
 
		$(document).ready(function() {
			$('input[type="text"], [type="password"]').addClass("idleField");
       		$('input[type="text"], [type="password"]').focus(function() {
       			$(this).removeClass("idleField").addClass("focusField");
    		    if (this.value == this.defaultValue){ 
    		    	this.value = '';
				}
				if(this.value != this.defaultValue){
	    			this.select();
	    		}
    		});
    		$('input[type="text"], [type="password"]').blur(function() {
    			$(this).removeClass("focusField").addClass("idleField");
    		    if ($.trim(this.value) == ''){
			    	this.value = (this.defaultValue ? this.defaultValue : '');
				}
    		});
		});			
	</script>
<%end%>

